{
    "plugins": [
        "react"
    ],
    "parser": "babel-eslint",
    "extends": [
        "airbnb"
    ],
    "rules": {
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "jsx-a11y/anchor-is-valid": [
            "error",
            {
                "components": [
                    "Link"
                ],
                "specialLink": [
                    "to"
                ]
            }
        ],
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1
            }
        ],
        "no-extra-bind": 0,
        "no-underscore-dangle": [
            "error",
            {
                "allowAfterThis": true
            }
        ],
        "no-param-reassign": 0,
        "jsx-quotes": [
            "error",
            "prefer-single"
        ],
        "class-methods-use-this": "off",
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "react/jsx-indent": [
            "error",
            2
        ],
        "react/jsx-indent-props": [
            "error",
            2
        ],
        "react/prop-types": [
            2,
            {
                "ignore": [
                    "children"
                ]
            }
        ],
        "no-new": 0,
        "max-len": [
            1,
            120
        ],
        "import/prefer-default-export": "off",
        "import/no-unresolved": 0,
        "no-plusplus": [
            "error",
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "jsx-a11y/label-has-for": [
            2,
            {
                "components": [
                    "Label"
                ],
                "required": {
                    "some": [
                        "nesting",
                        "id"
                    ]
                },
                "allowChildren": false
            }
        ]
    },
    "globals": {
        "window": true,
        "document": true,
        "process": true,
        "console": true
    }
}